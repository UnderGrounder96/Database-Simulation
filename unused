## static ------------------------------------
def static_vars(**kwargs):
    def decorate(func):
        for k in kwargs:
            setattr(func, k, kwargs[k])
        return func
    return decorate


    foo.counter += 1
    print "Counter is %d" % foo.counter
	
    
